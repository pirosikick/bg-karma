{
  "name": "bg-karma",
  "version": "0.0.1",
  "description": "Run karma in background",
  "main": "index.js",
  "scripts": {
    "test": "mocha --compilers js:espower-6to5/guess test/**/*.js",
    "test-watch": "mocha -w --compilers js:espower-6to5/guess test/**/*.js",
    "build": "6to5 src --out-dir lib --source-maps-inline",
    "watch": "6to5 src --out-dir lib --watch --source-maps-inline"
  },
  "directories": {
    "test": "test/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pirosikick/bg-karma"
  },
  "author": "Hiroyuki Anai <pirosikick@gmail.com>",
  "license": {
    "type": "MIT",
    "url": "http://pirosikick.mit-license.org/"
  },
  "bugs": {
    "url": "https://github.com/pirosikick/bg-karma/issues"
  },
  "homepage": "https://github.com/pirosikick/bg-karma",
  "files": [
    "index.js",
    "lib"
  ],
  "devDependencies": {
    "6to5": "^2.9.3",
    "espower-6to5": "^1.1.0",
    "mocha": "^2.1.0",
    "proxyquire": "^1.3.0",
    "sinon": "^1.12.2"
  },
  "dependencies": {
    "karma": "^0.12.31",
    "power-assert": "^0.10.1"
  }
}
